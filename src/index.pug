block content
	.section.section-main
		+picture({
			img: 'images/bg-1.png',
			class: 'bg'
		})
		.desc-center
			.container
				img(src="images/main-banner.svg" loading="loading")
	.running-line.js-marquee
		.inner
			ul
				li качественная продукция
