		})
	mixin catalog(data)
		.catalog&attributes(attributes)
			.container
				.title=data.ttl
				.product-carousel
					.swiper
						.swiper-wrapper
							each itm in data.products
								.swiper-slide
									.card
										.pict
											+picture({
												media: false,
												img: itm.img,
												alt: itm.ttl
											})
										.ttl!=itm.ttl
					.swiper-button-prev
						+icon('angle-left')
					.swiper-button-next
						+icon('angle-right')
